<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sonidos.SonidosFragment"
    android:background="@drawable/fondo_dos"
    android:padding="40dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_uno"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Sorpresa"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_dos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Aleluya"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_tres"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Viento"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_cuatro"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Explocion 01"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_cinco"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Explosion 02"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_seis"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Aplausos"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_ocho"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Apuntele Bien"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_nueve"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Salto"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_unouno"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/start"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Boing"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>